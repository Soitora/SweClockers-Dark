/* ==UserStyle==
@name			SweClockers Dark
@namespace		https://github.com/Soitora
@version		4.0.0-alpha.1
@description	A modern dark theme for SweClockers
@author			Soitora <simon.mattila@protonmail.com> (https://soitora.com)
@homepageURL	https://github.com/Soitora/SweClockers-Dark
@supportURL		https://github.com/Soitora/SweClockers-Dark/issues
@updateURL		https://raw.githubusercontent.com/Soitora/SweClockers-Dark/master/sweclockers-dark.user.styl
@license		MPL-2.0
@preprocessor	stylus

@var	color		var-background-1 "Background color 1" #121212
@var	color		var-background-2 "Background color 2" #1D1D1F
@var	color		var-text-1 "Text color 1" #C8C8C8
@var	color		var-text-2 "Text color 2" #AAAAAA
@var	color		var-border-color "Border color" #08080B
@var	color		var-border-color-light "Border color light" #3B3B3B
@var	color		var-highlight "Highlight color" #2A2A2D
@var	color		var-warning "Warning color" #EE4757
@var	color		var-theme "Theme color" #F19A57
@var	color		var-theme-text "Theme color text" #FFFFFF
@var	number		var-image-opacity "Image opacity" [0.75, 0, 1, 0.05]
==/UserStyle== */
@-moz-document domain("www.sweclockers.com")
	/* UserCSS */
	var-background-1 ?= #121212
	var-background-2 ?= #1D1D1F
	var-text-1 ?= #C8C8C8
	var-text-2 ?= #AAAAAA
	var-border-color ?= #08080B
	var-border-color-light ?= #3B3B3B
	var-highlight ?= #2A2A2D
	var-warning ?= #EE4757
	var-theme ?= #F19A57
	var-theme-text ?= #FFFFFF
	var-image-opacity ?= 0.75
	/* End UserCSS */
	/* Variables */
	var-on-background-1 = var-background-2
	var-on-background-2 = darken(var-background-2, 25%)
	var-on-background-2-button = lighten(var-background-2, 3%)
	var-border = 1px solid var-border-color
	var-border-light = 1px solid var-border-color-light
	var-border-radius = 0.6rem
	var-hover-opacity = 0.8
	var-hover-text = none
	var-box-shadow = 0 0 0 1px var-border-color
	var-box-shadow-inset = inset 0 0 0 1px var-border-color
	var-box-shadow-warning = 0 0 0 1px var-warning
	var-text-shadow = 1px 1px 2px var-black
	var-filter-light = brightness(0) saturate(100%) invert(92%) sepia(0) saturate(489%) hue-rotate(229deg) brightness(90%) contrast(86%)
	var-black = #000000
	var-white = #ffffff
	var-beige = #9c6500
	var-blue = #305d84
	var-green = #1c5a00
	var-pink = #b34d84
	/* End Variables */
	/* Global */
	body
		background-color var-background-1
		color var-text-2
	a,
	.link
		color var-theme
	a:hover,
	a:hover>.label,
	.link:hover,
	.link:hover>.label
		text-decoration var-hover-text
		opacity var-hover-opacity
	img,
	.ad
		opacity var-image-opacity
	.button,
	.tanukiButton
		background-color var-on-background-1
		border var-border
		color var-text-1
		&:hover
			background-color var-highlight
	.widget
		&.content-secondary,
		&.content-orange,
		&.bg-dark-grey-primary
			background-color var-background-2 !important
			box-shadow var-box-shadow-inset
			.widget-head
				.title
					color var-theme !important
				.title-secondary
					color var-text-1
					a
						color var-text-2
			.widget-body
				.title
					color var-text-1
				.list
					.list-meta
						&.list-bubble
							&.date
								background-color var-blue !important
								color var-white !important
								text-shadow var-text-shadow !important
					.list-link
						color var-text-2
	.bg
		&-orange
			color var-theme-text !important
			background-color var-theme !important
			text-shadow var-text-shadow !important
			&:not(.no-hover):hover
				background-color darken(var-theme, 10%) !important
			&.color-white
				color var-theme-text !important
			a
				color red
		&-grey-primary
			color #282828 !important
			background-color purple !important
			&:not(.no-hover):hover
				background-color #fff !important
			a
				color #1f5994
		&-grey-secondary
			color #6a6a6a !important
			background gold !important
			&:not(.no-hover):hover
				background-color #efeeec !important
			a
				color #1f5994
		&-dark-grey-primary
			color #fff !important
			background-color red !important
			&:not(.no-hover):hover
				background-color #424242 !important
			a
				color #ccc
		&-blue
			background-color var-blue !important

		&-blue-secondary
			background-color darken(var-blue, 20%) !important

		&-green
			background-color var-green !important

		&-pink
			background-color var-pink !important

		&-beige
			background-color var-beige !important

		&-white
			background-color var-white !important
	.color
		&-white
			color var-text-1 !important
			fill var-text-1 !important
			svg
				fill var-text-1 !important
		&-black
			color var-black !important
			fill var-black !important
			svg
				fill var-black !important
		&-orange
			color var-theme !important
			fill var-theme !important
			svg
				fill var-theme !important
		&-grey-primary
			color #f1efec !important
			fill #f1efec !important
			svg
				fill #f1efec !important
		&-dark-grey-primary
			color #282828 !important
			fill #282828 !important
			svg
				fill #282828 !important
		&-yellow
			color #fafad9 !important
			fill #fafad9 !important
			svg
				fill #fafad9 !important
	/* End Global */
	/* Header */
	#header
		.nav-container
			.nav-top
				background-color var-background-1
				.container
					.logo
						a:hover img
							opacity unset
					.profile-wrapper
						.pw-notifications
							a
								&.color-orange
									span
										color var-theme
								&.m-m-r:hover
									span
										color var-warning
									svg
										fill var-warning
								svg
									fill var-text-2
								span
									color var-text-2
						.pw-link
							color var-text-1
			.nav-main
				background-color var-background-2
				border-top var-border
				border-bottom var-border
				ul
					li
						@media (min-width 769px)
							&:hover:not(.is-selected)>ul
								background-color var-background-2
						a
							color var-text-2
							&:hover
								background-color var-highlight
							span
								color var-text-2
							svg
								fill var-text-2
						input
							background-color var-on-background-2
							border var-border-light
							color var-text-2
							&:focus
								color var-text-1
								&::placeholder
									color darken(var-text-2, 50%)
							&::placeholder
								color var-text-2
					ul
						border var-border
	/* End Header */
	/* Content */
	#content
		.container
			.columns
				background-color transparent
				.content-head
					h1
						color var-text-1
				.content-body
					background-color var-on-background-1
					.article-body
						.article-bbcode
							.bbcode
								.bbExpander
									.expanderHeader
										border-color var-border-color-light
										color var-text-1
									.expanderFrame
										.expanderFade
											background -moz-linear-gradient(top, transparent 0, transparent 10%, var-background-1 100%) !important
											background -webkit-gradient(linear, left top, left bottom, color-stop(0, transparent), color-stop(45%, transparent), color-stop(100%, var-background-1)) !important
											background -webkit-linear-gradient(top, transparent 0, transparent 10%, var-background-1 100%) !important
											background -o-linear-gradient(top, transparent 0, transparent 10%, var-background-1 100%) !important
											background -ms-linear-gradient(top, transparent 0, transparent 10%, var-background-1 100%) !important
											background linear-gradient(to bottom, transparent 0, transparent 10%, var-background-1 100%) !important
									.expanderFooter
										border-color var-border-color-light
				.carousel
					.section
						.slide
							&:hover
								.front a
									text-decoration var-hover-text
							.inner
								&:hover img
									opacity 0.65
								.click:hover
									opacity 1
								.comments-bubble
									.cb-top
										background-color var-theme !important
										color var-theme-text !important
										text-shadow var-text-shadow !important

									.cb-bottom
										border-color transparent var-theme transparent transparent
								.front
									pointer-events none
									a
										opacity 1
				.cards
					background-color var-background-2
					box-shadow var-box-shadow-inset
					.card
						border-top 1px solid var-border-color
						&:first-child
							border-top none
						.card-banner
							img
								border-radius var-border-radius
						.card-body
							.comments-bubble
								.cb-top
									background-color var-theme !important
									color var-theme-text !important
									text-shadow var-text-shadow !important

								.cb-bottom
									border-color transparent var-theme transparent transparent
							.title a
								color var-text-2
							.article-meta
								.category
									color var-theme
								.date
									color var-text-1
						.cards-related
							legend
								color var-text-1
							li
								border-top var-border-light
						.article-sponsored
							background-color transparent
							&::before
								color var-theme
								content "\2605 "
								position absolute
								width 0
								left 10px
								margin-top -2px
					.ad
						border-top var-border-light
						iframe
							border-radius var-border-radius
				.forumPosts
					.forum-post
						.forum-post-header
							color inherit !important
						.forum-post-body
							background-color var-on-background-1
							border-radius var-border-radius
							.col
								&.side
									background-color darken(var-on-background-1, 10%)
									&.profile
										.avatar
											border-radius var-border-radius !important
						.message
							.bbcode
								.bbQuote
									background-color var-on-background-2
									border-color var-border-color
									.quoteContent
										border-top-color var-border-color-light
						.button
							background-color var-on-background-2
							color var-text-1
							&:hover
								background-color var-highlight
							&.like
								&.is-liked
									.score
										color var-text-2
									.icon
										fill var-theme
								&:not(.is-liked)
									.score
										color var-text-2
									.icon
										fill var-text-2
				.forumForm
					background-color var-on-background-1
					.body
						input,
						textarea
							background-color var-on-background-2
							border-color var-border-color
							border-radius var-border-radius
							color var-text-2
							&:focus
								color var-text-1
						fieldset
							.button,
							.tanukiButton
								background-color var-on-background-2
								&:hover
									background-color var-highlight
				#forumList-1
					table
						background-color transparent
						caption
							background-color transparent
						.head
							.cell
								background-color var-on-background-2
								&:first-child
									border-top-left-radius var-border-radius
								&:last-child
									border-top-right-radius var-border-radius
						.body
							.cell
								background-color var-on-background-1
								&.title
									h2 a
										color var-theme
									.descr
										color var-text-2
								&.lastThread
									h3
										color var-text-1
									.by,
									.date
										color var-text-2
										.time
											color var-text-1
				.forumThreads
					table
						caption
							background-color transparent
						.head
							.cell
								background-color var-on-background-2
								&:first-child
									border-top-left-radius var-border-radius
								&:last-child
									border-top-right-radius var-border-radius
						.body
							.cell
								background-color var-on-background-1
								border-bottom var-border
								&.title
									h2 a
										color var-text-1
									.pageLinks
										.link.last
											text-decoration none
									.descr
										color var-text-2
								&.status
									.thread-status
										.icon
											fill var-theme
											&.thread
												&_locked,
												&_pinned
													fill var-text-2
									.posts
										color var-text-2
								&.lastReply
									.date
										color var-text-2
										time .time
											color var-text-1
						.allPostsRead
							.cell
								&.title
									h2 a
										color darken(var-text-1, 40%)
									.descr
										color darken(var-text-2, 40%)
								&.status
									.thread-status
										.icon
											fill darken(var-text-2, 40%)
											&.thread
												&_locked,
												&_pinned
													fill darken(var-text-2, 40%)
									.posts
										color darken(var-text-2, 40%)
				.thread-footer
					.quickReply
						background-color var-on-background-1
						.body
							textarea
								background-color var-on-background-2
								border-color var-border-color
								border-radius var-border-radius
								color var-text-2
								&:focus
									color var-text-1
							#better-sweclockers-editing-tools
								.button
									background-color var-on-background-2
									&:hover
										background-color var-highlight
						.controls
							.button
								background-color var-on-background-2
								&:hover
									background-color var-highlight
	/* End Content */
	/* Footer */
	#footer
		.bottom
			background-color var-background-2
			color var-text-2
			a
				color var-text-1
			.copyright
				color var-text-2
	/* End Footer */