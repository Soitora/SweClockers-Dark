	// Orphans
	.infoText
		h1
			color $text-1
		p
			color $text-2
		a
			color $theme
			&:hover
				text-decoration $hover-text
				opacity $hover-opacity

	.whiteHeader
		h1
			color $text-1
		.descr
			color $text-2
		.breadcrumbs
			.breadcrumb
				&:after
					color $text-2
				a
					color $theme
					text-decoration none
