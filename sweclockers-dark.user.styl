/* ==UserStyle==
@name			SweClockers Dark
@namespace		https://github.com/Soitora
@version		3.0.0-alpha.8
@description	A modern dark theme for SweClockers
@author			Soitora <soitora@outlook.com> (https://soitora.com)
@homepageURL	https://github.com/Soitora/SweClockers-Dark
@supportURL		https://github.com/Soitora/SweClockers-Dark/issues
@updateURL		https://raw.githubusercontent.com/Soitora/SweClockers-Dark/master/sweclockers-dark.user.styl
@license		MPL-2.0
@preprocessor	stylus

@var	color	usercss-background-1 "Background color 1" #101013
@var	color	usercss-background-2 "Background color 2" #17171A
@var	color	usercss-background-3 "Background color 3" #0B0B0D
@var	color	usercss-border "Border color" #08080B
@var	color	usercss-border-menus "Menu border color" #000000
@var	color	usercss-text-1 "Text color 1" #C8C8C8
@var	color	usercss-text-2 "Text color 2" #AAAAAA
@var	color	usercss-highlight "Highlight color" #232326
@var	color	usercss-warning "Warning color" #EF4A4B
@var	color	usercss-theme "Theme color" #F19A57
@var	color	usercss-theme-text "Theme text color" #FFFFFF
@var	text	usercss-theme-filter "Theme filter" brightness(0) saturate(100%) invert(82%) sepia(26%) saturate(3168%) hue-rotate(320deg) brightness(99%) contrast(91%)

==/UserStyle== */
@-moz-document domain("www.sweclockers.com")
	// Mixins
	filter(n)
		filter n
		-moz-filter n
		-ms-filter n
		-o-filter n
		-webkit-filter n

	border-radius(n)
		border-radius n
		-moz-border-radius n
		-ms-border-radius n
		-o-border-radius n
		-webkit-border-radius n

	box-shadow(n)
		box-shadow n
		-moz-box-shadow n
		-ms-box-shadow n
		-o-box-shadow n
		-webkit-box-shadow n

	user-select(n)
		user-select n
		-moz-user-select n
		-ms-user-select n
		-o-user-select n
		-webkit-user-select n

	// User variables
	$background-1 = usercss-background-1
	$background-2 = usercss-background-2
	$background-3 = usercss-background-3
	$border = usercss-border
	$border-menus = usercss-border-menus
	$text-1 = usercss-text-1
	$text-2 = usercss-text-2
	$highlight = usercss-highlight
	$warning = usercss-warning
	$theme = usercss-theme
	$theme-text = usercss-theme-text
	$filter-theme = usercss-theme-filter
	// Global variables
	$border-style = 1px solid $border
	$border-radius = 0.6rem
	$hover-opacity = 0.75
	$hover-text = none
	$box-shadow = 0 0 0 1px $border
	$text-shadow = 1px 1px 2px #000000
	$filter-grey = sepia(0) saturate(0.29) brightness(67%) contrast(184%) hue-rotate(179deg) invert(8%)

	// Scrollbar
	::-webkit-scrollbar
		width 14px
		height 12px

	::-webkit-scrollbar-thumb
		border-right 2px solid $background-1
		border-left 2px solid $background-1
		background-color $theme

	::-webkit-scrollbar-track
	::-webkit-scrollbar-corner
		background-color $background-1

	// Body
	body
		border default-border
		border-radius 10rem
		background-color $background-1

	// Top
	.top
		.header
			background-color $background-1
			color $text-2
			.logo
				background-image url('https://soitora.com/SweClockers-Dark/images/logo.svg')
			.mainMenu .menu li.menuItem.isSelected
				background-color $background-2
			.subMenu .menu li.menuItem.isSelected
				background-color $background-1
			.mainMenu
			.subMenu
				.rborder
					border-bottom $border-style
				.menu li
					border 1px solid $border-menus
					&.menuItem
						background-color $background-3
						&.isSelected
							border-bottom 0
							a
								color $text-1
						&:hover
							background-color $highlight
						a
							color $text-2
							&:hover
								color $text-1
				.better-sweclockers-icon-tab
					background-color $background-3 !important
					opacity 1 !important
					&:hover
						background-color $highlight !important
			.main
				border-right $border-style
				border-bottom $border-style
				background-color $background-2
				.ninjaSearch
					border-left $border-style
					h5
						color $text-2
					.searchField
						.fieldWrap
							border $border-style
							border-radius 0.25rem
							background-color $background-3
							input
								color $text-2
								&:focus
									color $text-1
						a[title*=Google]
							background-color $background-3
							color $text-1 !important
							border $border-style
							&:hover
								background-color $highlight
				.ninjaSearchResult
					color $text-2
					h6
						color $text-1
					.showMore
						color $theme
						text-decoration none
						&:hover
							text-decoration $hover-text
							opacity $hover-opacity
					.resultList
						a
							color $text-2
							&:hover
								text-decoration $hover-text
								opacity $hover-opacity
						.icon
							filter $filter-theme
						.date
							color $text-1 !important
					.externalSearch a
						color $theme
						&:hover
							text-decoration $hover-text
							opacity $hover-opacity
				.profile
					border-left $border-style
					h5 a
						color $text-2
						&:hover
							text-decoration $hover-text
							opacity $hover-opacity
					.options
						color $text-2
						.icon
							filter $filter-grey
						a.label:hover
							&::after
							span
								text-decoration $hover-text
								opacity $hover-opacity
						.signout button:hover
							color $warning
							text-decoration $hover-text
							opacity $hover-opacity
						.hasUnread
							color $theme
							.icon
								filter $filter-theme
				.signin
					border-left $border-style
					h5
						color $text-2
					.actions .button
						border $border-style
						background-color $background-3
						color $text-2
						&:hover
							background-color $highlight
		.carousel
			a
				color $text-1
			.slide
				&:hover h3 a
					text-decoration $hover-text
					opacity $hover-opacity
				.inner
					border-top-right-radius 0
			.nav
				&.left
				&.right
					.handle
						filter $filter-theme
						&:hover
							opacity $hover-opacity
			.bg-orange
				border-bottom-left-radius $border-radius
				background-color transparentify($background-2, 0.5) !important
				&:hover
					background-color $highlight !important
		.mainContent
			border $border-style
			background-color $background-2
			.newsList
				.pubItem
					border-bottom $border-style
				.itemBanner
					.sponsoredArticle
						background-color transparent
						color $text-1
						font-weight 700
						font-size 1.2em
					.inner
						border-radius $border-radius
						box-shadow $box-shadow
					img
						border-radius $border-radius
				.itemBody
					h2 a
						color $theme
						&:hover
							text-decoration $hover-text
							opacity $hover-opacity
					.itemMeta
						.category a
							color $theme
							&:hover
								text-decoration $hover-text
								opacity $hover-opacity
						.date
							color $text-1
					.itemText
						color $text-2
						.bbLink
							color $theme
							text-decoration none
							&:hover
								text-decoration $hover-text
								opacity $hover-opacity
						.bbReply
							color $theme
							&:hover
								text-decoration $hover-text
								opacity $hover-opacity
					.commentsBubble
						border-top $border-style
						border-bottom $border-style
						border-left $border-style
						background-color $background-3
						color $text-1
						&.isHot
							background-color $theme
							color $theme-text
							text-shadow $text-shadow
						&:hover
							background-color $highlight
							text-decoration $hover-text
				.relatedLinks
					border $border-style
					background-color $background-1
					legend
						color $text-1
					a
						color $theme
						&:hover
							text-decoration $hover-text
							opacity $hover-opacity
					ul
						color $text-2
			.read-more-archive
				color $theme
				text-decoration none
				&:hover
					text-decoration $hover-text
					opacity $hover-opacity
			.articleList
				.listItem
					border-bottom $border-style
					&:last-child
						border-bottom none
					.title
						color $theme
						text-decoration none
						a
							color $theme
							&:hover
								text-decoration $hover-text
								opacity $hover-opacity
					.meta
						.timestamp
							color $text-1
						.category
							color $text-2
							&:hover
								text-decoration $hover-text
								opacity $hover-opacity
						.authors-byline
							color $text-2
							a
								color $text-1
								&:hover
									text-decoration $hover-text
									opacity $hover-opacity
						.comments
							.icon
								filter $filter-theme
							.n
								color $theme
							&:hover
								.icon
								.n
									text-decoration $hover-text
									opacity $hover-opacity
					.preamble
						.bbcode
							.bbParagraph
								color $text-2
		.sideBox
			&.articleByline
				h5
					border-bottom $border-style
					color $text-1
				.author a
					color $theme
					&:hover
						text-decoration $hover-text
						opacity $hover-opacity
				.crediter a
					color $theme
					&:hover
						text-decoration $hover-text
						opacity $hover-opacity
			&.sideShare
				h5
					border-bottom $border-style
					color $text-1
				.menuItem a
					color $text-2
					&:hover
					&:hover .label
						text-decoration $hover-text
						opacity $hover-opacity
					.icon
						filter $filter-theme
			&.videoPush
				h5
					border-bottom $border-style
					a
						color $text-1
						&:hover
							text-decoration $hover-text
							opacity $hover-opacity
				img
					box-shadow $box-shadow
				h3 a
					color $text-2
					&:hover
						text-decoration $hover-text
						opacity $hover-opacity
			&.popularGalleries
				h5
					border-bottom $border-style
					a
						color $text-1
						&:hover
							text-decoration $hover-text
							opacity $hover-opacity
				.image
					box-shadow $box-shadow
				h3 a
					color $theme
					&:hover
						text-decoration $hover-text
						opacity $hover-opacity
				.author
				.cat
				.rating
					color $text-2
					a
						&:hover
							text-decoration $hover-text
							opacity $hover-opacity
		.pages
			a
				color $text-2
				background-color transparent
				&.isCurrent
					color $theme
					&:hover
						background-color transparent
				&:hover
					opacity 0.75
			.icon
				filter $filter-theme

	// Bottom
	.bottom
		.footer
			border-top $border-style
			.top
				border-top $border-style
				background-color $background-2
				color $text-2
				.block
					h6
						color $text-1
					p
						color $text-2
					a
						color $theme
						&::before
							filter $filter-theme
						&:hover
							text-decoration $hover-text
							opacity $hover-opacity
					.rssFeeds
						a:hover .label
							text-decoration $hover-text
							opacity $hover-opacity
					&:not(:last-child)
						border-right $border-style
			.bottom
				background-color $background-2
				color $text-2
				a
					color $text-1
					&:hover
						text-decoration $hover-text
						opacity $hover-opacity
				.bahnhof-logo
					color $text-1
					&:hover span
						text-decoration $hover-text !important
						opacity $hover-opacity

	// Widgets
	#wdgtSideRecentThreads
		background-color $background-2
		box-shadow $box-shadow
		.plHead
			h5 a
				color $theme
				&:hover
					text-decoration $hover-text
					opacity $hover-opacity
		.plBody
			.plItemList
				.plLabel
					.plLabelIcon
						filter $filter-theme
					.plLabelText
						color $text-2
					&:hover
						.plLabelHover
							text-decoration $hover-text
							opacity $hover-opacity
				.plComments
					.plLabelText
						color $theme
					&:hover
						.plIcon
						.plLabelHover
							text-decoration $hover-text
							opacity $hover-opacity
			.button
				background-color $background-3 !important
				box-shadow $box-shadow
				color $text-2
				&:hover
					background-color $highlight !important

	#wdgtSideRecentClassifieds
		background-color $background-2
		box-shadow $box-shadow
		.plHead
			h5 a
				color $theme
				&:hover
					text-decoration $hover-text
					opacity $hover-opacity
		.plBody
			.plItemList
				.plLabel
					.plLabelIcon
						filter $filter-theme
					.plLabelText
						color $text-2
					&:hover
						.plLabelHover
							text-decoration $hover-text
							opacity $hover-opacity

	#wdgtSideGeeksShop
		border $border-style
		background-color $background-2
		h5
			color $theme
		a
			&:hover
				.productName
				.productPrice
					text-decoration $hover-text
					opacity $hover-opacity
		.productWrapper
			.productImage
				box-shadow $box-shadow
			.productName
				color $text-2
			.productPrice
				color $text-1
			.buyButton
				background-color $theme
				box-shadow $box-shadow
				&:hover
					background-color $highlight

	#wdgtSidePopularProducts
		background-color $background-2
		box-shadow $box-shadow
		h5 a
			color $theme
			&:hover
				text-decoration $hover-text
				opacity $hover-opacity
		.descr
			color $text-2
		.ppProducts
			a
				&:hover
					opacity $hover-opacity
					.ppTitle
					.ppPrice
						text-decoration $hover-text
			.ppTitle
				color $text-1
			.ppPrice
				color $text-2

	#wdgtSideRecentReviews
		background-color $background-2
		box-shadow $box-shadow
		.plHead
			h5 a
				color $theme
				&:hover
					text-decoration $hover-text
					opacity $hover-opacity
			p
				color $text-2
				a
					color $text-1
					&:hover
						text-decoration $hover-text
						opacity $hover-opacity
		.plBody
			.plItemList
				.plLabel
					.plLabelIcon
						filter $filter-theme
					.plLabelText
						color $text-2
					&:hover
						.plLabelHover
							text-decoration $hover-text
							opacity $hover-opacity
				.plComments
					.plLabelText
						color $theme
					&:hover
						.plIcon
						.plLabelHover
							text-decoration $hover-text
							opacity $hover-opacity
			.plNyhetstips
				.plLabel
					color $text-1
					.plLabelIcon
						filter $filter-theme
					&:hover
						opacity $hover-opacity
						.plLabelHover
							text-decoration $hover-text

	#wdgtSideExternalFeeds
		.plHead
			h5
				color $theme
			p
				color $text-2
		.plBody
			h6
				color $text-1
			.plItemList
				.plLabel
					.plLabelIcon
						filter $filter-theme
					.plLabelText
						color $text-2
					.plLabelDate
						color $text-1
					&:hover
						.plLabelHover
						.plLabelDate
							text-decoration $hover-text
							opacity $hover-opacity

	#wdgtMainRecentNews
		background-color $background-2
		box-shadow $box-shadow
		.mwHead
			h5 a
				color $theme
				&:hover
					text-decoration $hover-text
					opacity $hover-opacity
		.mwBody
			h6
				color $text-1
			.mwItemList
				.mwLabel
					.mwLabelIcon
						filter $filter-theme
					.mwLabelDate
						color $text-1
					.mwLabelText
						color $text-2
					&:hover
						.mwLabelDate
						.mwLabelHover
							text-decoration $hover-text
							opacity $hover-opacity
				.mwComments
					.mwLabelText
						color $theme
					&:hover
						.mwIcon
						.mwLabelHover
							text-decoration $hover-text
							opacity $hover-opacity

	#wdgtMainRecentThreads
		background-color $background-2
		box-shadow $box-shadow
		.mwHead
			h5 a
				color $theme
				&:hover
					text-decoration $hover-text
					opacity $hover-opacity
		.mwBody
			h6
				color $text-1
			.mwItemList
				.mwLabel
					.mwLabelIcon
						filter $filter-theme
					.mwLabelText
						color $text-2
					&:hover
						.mwLabelHover
							text-decoration $hover-text
							opacity $hover-opacity

	// Forms
	#signinForm
		fieldset
			border $border-style
			legend
				color $text-1
			input
				border $border-style
				background-color $background-3
				color $text-2
				&:focus
					color $text-1
			.tcLabel
				color $text-1
				&::after
					color $warning
			.tcHint
				color $text-2
			button
				border $border-style
				background-color $background-3
				color $text-2
				&:hover
					background-color $highlight
					color $text-1
			.checkboxItem
				color $text-1

	#registerForm
		input
			border $border-style
			background-color $background-3
			color $text-2
		.tcLabel
			color $text-1
			&::after
				color $warning
		.tcHint
			color $text-2
		hr
			border $border-style
		.termsAndConditionsTitle
			color $text-1
		.infoTextWindow
			border $border-style
			background-color $background-3
			.rulesList
				h2
					color $text-1
				h4
					color $text-1
				p
					color $text-2
				a
					color $theme
					&:hover
						text-decoration $hover-text
						opacity $hover-opacity
		p
			color $text-2
			a
				color $theme
				&:hover
					text-decoration $hover-text
					opacity $hover-opacity
		.termsAndConditions
			color $text-1
		button
			border $border-style
			background-color $background-3
			color $text-2
			&:hover
				background-color $highlight
				color $text-1

